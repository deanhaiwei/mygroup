<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView_RealTime_Update"
        android:layout_gravity="center"
        android:text="更新时间11:00:00"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="#ff8e8e8e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.natasa.progressviews.CircleSegmentBarBar
        android:id="@+id/CircleSegmentBarBar"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="180dp"
        android:layout_height="120dp" />
    <TextView
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/textView_RealTime_WeekDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="星期一"
        android:padding="10dp"
        android:background="#ff8e8e8e"
         />
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/textView_RealTime_Condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="阴|空间质量:优"
        android:padding="10dp"
        android:background="#ff8e8e8e"
        />

</LinearLayout>