<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/recyclerview_item_backgroud"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <ImageView
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/ic_launcher"
        android:id="@+id/recyclerview_item_weathericon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />
    <TextView
        android:id="@+id/recyclerview_item_weather"
        android:layout_gravity="center"
        android:text="天气"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/recyclerview_item_temperature"
        android:text="气温/气温"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="周三"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/recyclerview_item_weekforday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>